{
  "name": "pancake-taro-toolkit",
  "version": "1.0.0",
  "description": "pancake-toolkit for taro",
  "main": "index.js",
  "author": "opar-xu",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace uikit-demo dev",
    "format:check": "lerna run format:check",
    "format:check:staged": "pretty-quick --staged --check",
    "format:write": "lerna run format:write",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:component": "lerna run --scope taro-ui build",
    "clean": "lerna run clean",
    "clean:component": "lerna run --scope taro-ui clean",
    "publish": "lerna publish from-git --yes",
    "prepare": "husky install"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.5.4",
    "husky": "^7.0.0"
  }
}
